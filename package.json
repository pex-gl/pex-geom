{
  "name": "pex-geom",
  "version": "3.1.0",
  "description": "Geometry intersection and bounding volume helpers for PEX.",
  "keywords": [
    "pex",
    "geom",
    "geometry",
    "webgl",
    "3d",
    "intersection",
    "bounding-volume",
    "bounding-box",
    "bbox",
