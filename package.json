    "plane",
    "ray",
    "rect"
  ],
  "homepage": "https://github.com/pex-gl/pex-geom",
  "bugs": "https://github.com/pex-gl/pex-geom/issues",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pex-gl/pex-geom.git"
  },
  "license": "MIT",
  "author": "Marcin Ignac <marcin.ignac@gmail.com> (http://marcinignac.com)",
  "contributors": [
    "Damien Seguin (https://github.com/dmnsgn)",
    "Nick Nikolov (https://github.com/nicknikolov)",
    "Henryk Wollik <hwollik@hotmail.com> (http://henrykwollik.com)"
  ],
  "sideEffects": false,
  "type": "module",
